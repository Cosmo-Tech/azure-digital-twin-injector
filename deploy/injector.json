{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "location for resource created."
            }
        },
        "digitalTwinsInstancesName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of an existing digital Twins instances in the resource group."
            }
        },
        "dataFactoryName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of an existing data factory instance name in the resource group."
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the function app to be created. Leave empty for automatic naming."
            }
        }
    },
    "variables": {
        "saName": "[concat('injectsa', take(uniqueString(resourceGroup().id), 8))]",
        "faName": "[if(empty(parameters('functionAppName')), concat('injectfa', take(uniqueString(resourceGroup().id), 8)), parameters('functionAppName'))]"
    },
    "functions": [],
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2020-08-01-preview",
            "name": "[variables('saName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": true,
                "accessTier": "Hot"
            },
            "resources": [
                {
                    "type": "queueServices/queues",
                    "apiVersion": "2020-08-01-preview",
                    "name": "default/json-queue",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts',variables('saName'))]"
                    ]
                },
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2020-08-01-preview",
                    "name": "default/input-csv",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('saName'))]"
                    ],
                    "properties": {
                        "defaultEncryptionScope": "$account-encryption-key",
                        "denyEncryptionScopeOverride": false,
                        "publicAccess": "None"
                    }
                },
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2020-08-01-preview",
                    "name": "default/automatic-import",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('saName'))]"
                    ],
                    "properties": {
                        "defaultEncryptionScope": "$account-encryption-key",
                        "denyEncryptionScopeOverride": false,
                        "publicAccess": "None"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-10-01",
            "name": "[variables('faName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', variables('saName'), 'default', 'input-csv')]",
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices/containers', variables('saName'), 'default', 'automatic-import')]",
                "[resourceId('Microsoft.Storage/storageAccounts/queueServices/queues', variables('saName'), 'default', 'json-queue')]"
            ],
            "kind": "functionapp",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "AzureWebJobsSecretStorageType",
                            "value": "Files"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(variables('faName'), take(uniqueString(variables('faName')), 4))]"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "10.14.1"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "WATCHED_CSV_STORAGE_CONNECTION",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WATCHED_CSV_STORAGE_CONTAINER",
                            "value": "automatic-import"
                        },
                        {
                            "name": "CSV_STORAGE_CONNECTION",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "CSV_STORAGE_CONTAINER",
                            "value": "input-csv"
                        },
                        {
                            "name": "JSON_STORAGE_CONNECTION",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "JSON_STORAGE_QUEUE",
                            "value": "json-queue"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2018-11-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('faName'))]"
                    ],
                    "properties": {
                        "repoUrl": "https://github.com/Cosmo-Tech/azure-digital-twin-injector.git",
                        "branch": "main",
                        "publishRunbook": true,
                        "IsManualIntegration": true
                    }
                }
            ]
        },
        {
            "condition": "[not(empty(parameters('digitalTwinsInstancesName')))]",
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-01-01-preview",
            "name": "[guid(uniqueString(variables('faName'), 'Azure Digital Twins Data Owner', parameters('digitalTwinsInstancesName')))]",
            "scope": "[concat('Microsoft.DigitalTwins/digitalTwinsInstances/', parameters('digitalTwinsInstancesName'))]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'bcd981a7-7f74-457b-83e1-cceb9e632ffe')]",
                "principalId": "[reference(resourceId('Microsoft.Web/sites', variables('faName')), '2020-10-01', 'Full').identity.principalId]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('faName'))]"
            ]
        },
        {
            "condition": "[not(empty(parameters('dataFactoryName')))]",
            "type": "Microsoft.DataFactory/factories/linkedServices",
            "apiVersion": "2018-06-01",
            "name": "[concat(parameters('dataFactoryName'),'/',variables('faName'))]",
            "properties": {
                "type": "AzureFunction",
                "typeProperties": {
                    "functionAppUrl": "[concat('https://', variables('faName'), '.azurewebsites.net')]",
                    "functionKey": {
                        "type": "SecureString",
                        "value": "[listKeys(concat(resourceId('Microsoft.Web/sites/', variables('faName')), '/host/default'), '2020-12-01').functionKeys.default]"
                    }
                },
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites', variables('faName'))]"
                ]
            }
        }
    ],
    "outputs": {}
}
