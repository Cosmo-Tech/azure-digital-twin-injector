{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "digitalTwinsInstancesName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of an existing digital Twins instances."
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the function app to be created. Leave empty for automatic naming."
            }
        }
    },
    "variables": {
        "saName": "[concat('injectsa', take(uniqueString(resourceGroup().id), 8))]",
        "faName": "[if(empty(parameters('functionAppName')), concat('injectfa', take(uniqueString(resourceGroup().id), 8)), parameters('functionAppName'))]"
    },
    "functions": [],
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2020-08-01-preview",
            "name": "[variables('saName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": true,
                "accessTier": "Hot"
            },
            "resources": [
                {
                    "type": "queueServices/queues",
                    "apiVersion": "2020-08-01-preview",
                    "name": "default/json-queue",
                    "dependsOn": [
"[resourceId('Microsoft.Storage/storageAccounts',variables('saName'))]"
                    ],
                    "properties": {
                        "metadata": {}
                    }
                },
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2020-08-01-preview",
                    "name": "default/input-csv",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('saName'))]"
                    ],
                    "properties": {
                        "defaultEncryptionScope": "$account-encryption-key",
                        "denyEncryptionScopeOverride": false,
                        "publicAccess": "None"
                    }
                },
                {
                    "type": "blobServices/containers",
                    "apiVersion": "2020-08-01-preview",
                    "name": "default/automatic-import",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', variables('saName'))]"
                    ],
                    "properties": {
                        "defaultEncryptionScope": "$account-encryption-key",
                        "denyEncryptionScopeOverride": false,
                        "publicAccess": "None"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-10-01",
            "name": "[variables('faName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('saName'))]"
            ],
            "kind": "functionapp",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "AzureWebJobsSecretStorageType",
                            "value": "Files"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(variables('faName'), take(uniqueString(variables('faName')), 4))]"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "10.14.1"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "WATCHED_CSV_STORAGE_CONNECTION",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WATCHED_CSV_STORAGE_CONTAINER",
                            "value": "automatic-import"
                        },
                        {
                            "name": "CSV_STORAGE_CONNECTION",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "CSV_STORAGE_CONTAINER",
                            "value": "input-csv"
                        },
                        {
                            "name": "JSON_STORAGE_CONNECTION",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('saName'), ';AccountKey=', listKeys(variables('saName'),'2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "JSON_STORAGE_QUEUE",
                            "value": "json-queue"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2018-11-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('faName'))]"
                    ],
                    "properties": {
                        "repoUrl": "https://github.com/Cosmo-Tech/azure-digital-twin-injector.git",
                        "branch": "main",
                        "publishRunbook": true,
                        "IsManualIntegration": true
                    }
                }
            ]
        },
        {
            "type": "Microsoft.DigitalTwins/digitalTwinsInstances/providers/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[concat(parameters('digitalTwinsInstancesName') , '/Microsoft.Authorization/', guid(subscription().subscriptionId, variables('faName'), 'DigitalTwinsOwner', parameters('digitalTwinsInstancesName')))]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('faName'))]"
            ],
            "properties": {
                "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', 'bcd981a7-7f74-457b-83e1-cceb9e632ffe')]",
                "principalId": "[reference(resourceId('Microsoft.Web/sites', variables('faName')), '2020-10-01', 'Full').identity.principalId]",
                "principalType": "ServicePrincipal"
            }
        }
    ],
    "outputs": {
    //     "insertCsvUrl": {
    //         "type": "string",
    //         "value": "[concat('https://', variables('faName'), '.azurewebsites.net')]"
    //     },
    //     "insertCsvSecret": {
    //         "type": "string",
    //         "value": "[listSecrets(resourceId('Microsoft.Web/sites/functions', variables('faName'), 'insertcsv'),'2020-06-01').key]"
    //     },
    //     "automticInsertUrl": {
    //         "type": "string",
    //         "value": "[concat('https://', variables('saName'), '.blob.core.windows.net/automatic-import')]"
    //     },
    //     "automticInsertKey": {
    //         "type": "string",
    //         "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('saName')), '2019-04-01').keys[0].value]"
    //     }
    }
}
