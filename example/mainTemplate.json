{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "location for resource created."
            }
        },
        "dataFactoryName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of an existing Data Factory in the resource group. Leave empty for creating one."}
        },
        "digitalTwinName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of an existing Digital Twins Instances in the resource group. Leave empty for creating one."
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the injector Function App. leave empty for a default name."
            }
        }
    },
    "variables": {
        "dtName": "[if(empty(parameters('digitalTwinName')),concat('digitaltwin', take(uniqueString(resourceGroup().id),8)),parameters('digitalTwinName'))]",
        "dfName": "[if(empty(parameters('dataFactoryName')),concat('datafactory', take(uniqueString(resourceGroup().id),8)),parameters('dataFactoryName'))]",
        "faName": "[if(empty(parameters('functionAppName')),concat('functionapp', take(uniqueString(resourceGroup().id),8)),parameters('functionAppName'))]"
    },
    "functions": [],
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[concat('input', take(uniqueString(resourceGroup().id),8))]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2"
        },
        {
            "type": "Microsoft.DigitalTwins/digitalTwinsInstances",
            "apiVersion": "2020-12-01",
            "name": "[variables('dtName')]",
            "location": "[parameters('location')]",
            "properties": {
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.DataFactory/factories",
            "apiVersion": "2018-06-01",
            "name": "[variables('dfName')]",
            "location": "[parameters('location')]"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "injector-deployment",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Cosmo-Tech/azure-digital-twin-injector/deploy/deploy/injector.json"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "digitalTwinsInstancesName": {
                        "value": "[variables('dtName')]"
                    },
                    "dataFactoryName": {
                        "value": "[variables('dfName')]"
                    },
                    "functionAppName": {
                        "value": "[variables('faName')]"
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.DataFactory/factories', variables('dfName'))]",
                "[resourceId('Microsoft.DigitalTwins/digitalTwinsInstances', variables('dtName'))]"
            ]
        }
    ],
    "outputs": {}
}
