{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "location for resource created."
            }
        },
        "functionAppName": {
            "type": "string",
            "metadata": {
                "description": "Name of an existing functionApp name. leave empty for a default name."
            }
        },
        "dataFactoryName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the Data Factory. leave empty for a default name."
            }
        },
    },
    "variables": {
        "dfName" : "[if(empty(parameters('dataFactoryName')),concat('datafactory', take(uniqueString(resourceGroup().id),8)),parameters('dataFactoryName'))]" ,
    },
    "functions": [
        {
            "namespace": "csm",
            "members": {
                "forceDelayedEvaluation": {
                    "parameters": [
                        {
                            "name": "input",
                            "type": "string"
                        } 
                    ],
                    "output": {
                        "type" : "string",
                        "value": "[parameters('input')]"
                    }
                    
                }
                
            }
        }
    ],
    "resources": [
        {
            "type": "Microsoft.DataFactory/factories",
            "apiVersion": "2018-06-01",
            "name": "[variables('dfName')]",
            "location": "[parameters('location')]",
        },
        {
            "type": "Microsoft.DataFactory/factories/linkedServices",
            "apiVersion": "2018-06-01",
            "name": "[concat(variables('dfName'),'/',parameters('functionAppName'))]",
            "properties": {
                "type": "AzureFunction",
                "typeProperties": {
                    "functionAppUrl": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net')]",
                    "functionKey": {
                        "type": "SecureString",
                        "value": "[csm.forceDelayedEvaluation(listSecrets(resourceId('Microsoft.Web/sites/functions', parameters('functionAppName'), 'insertcsv'),'2020-06-01').key)]"
                    }
                },
                "dependsOn": [
                    "[resourceId('Microsoft.DataFactory/factories', variables('dfName'))]"
                ]
            }
        }
    ],
    "outputs": {}
}
